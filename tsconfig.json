        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": false,
        "sourceMap": true,
        "declaration": false,
        "noEmitOnError": true
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./lib/**/*.tsx",
